<?xml version="1.0" encoding="utf-8"?>
<com.gardify.genericrecycleviewadapter.PetHeaderRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@android:color/white"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/pet_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/pet_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_gravity="center_vertical" />

</com.gardify.genericrecycleviewadapter.PetHeaderRow>